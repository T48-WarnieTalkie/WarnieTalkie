extends layout

block append head
  link(rel="stylesheet" href="/leaflet/dist/leaflet.css")
  script(defer, src="/leaflet/dist/leaflet.js")
  script(defer, src="/javascripts/content-map_scripts.js")
  script(defer, src="/javascripts/test.js")
    
block content
  div(class="bg-body-secondary")
    div(class="mx-auto container-sm my-4" style="max-width: 1000px")
      h1= title
  div(class="mx-auto container-sm" style="max-width: 1000px")
    div(class="row my-2 gy-2")
      div(class="col-sm-6")
        div(id="contentCarousel" class="carousel slide bg-body-secondary" style="height: 500px")
          div(class="carousel-inner")
            div(class="carousel-item active")
              img(class="carousel-img" src="/images/cat2.jpg")
            div(class="carousel-item")
              img(class="carousel-img" src="/images/cat3.jpeg")
          button(class="carousel-control-prev" type="button" data-bs-target="#contentCarousel" data-bs-slide="prev")
            span(class="carousel-control-prev-icon" aria-hidden="true")
            span(class="visually-hidden") Previous 
          button(class="carousel-control-next" type="button" data-bs-target="#contentCarousel" data-bs-slide="prev")
            span(class="carousel-control-next-icon" aria-hidden="true")
            span(class="visually-hidden") Next 
      div(class="col-sm-6")
        #contentMap(style="height: 500px")
    div(class="row" style="min-height: 500px")
      div(class="col")
        h2= category
        em inviata da #{name} #{surname} il #{date} alle #{time}
        hr
        p= description
  
    
          
      

      


  